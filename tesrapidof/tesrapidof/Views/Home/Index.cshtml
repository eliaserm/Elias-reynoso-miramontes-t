@{
    ViewBag.Title = "Home Page";
}
<style>
    #tabla_general {
        width: 100%; /* Establecer un ancho del 100% */
    }
</style>

<div class="container" style="max-width:100%">
    <div class="container" style="margin-top:5%;">
        <div class="row">
            <div class="col-lg-3">
                <input type="text" class="form-control" placeholder="Id" id="Id">
            </div>
            <div class="col-lg-3">
                <input type="text" class="form-control" placeholder="Nombre" id="Nombre">
            </div>
            <div class="col-lg-3">
                <input type="text" class="form-control" placeholder="Descripcion" id="Descripcion">
            </div>
            <select id="opciones" name="opciones" class="form-control">
                <option value="1">Servicio</option>
                <option value="2">DB</option>
            </select>           
        </div>
        <div class="row" style="margin-top:2%;margin-left:30%">
            <div class="col-lg-1">
                <button class="btn btn-success" onclick="insertar()">Insertar</button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary" onclick="update()">Editar</button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-danger" onclick="eliminar()">Eliminar</button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn btn-dark" onclick="mostrar()">Mostrar</button>
            </div>
        </div>   
    </div>
    
    <div class="container">
        <table class="table table-striped"  id="tabla_general">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.estado == 1)
                {
                    foreach (var item in ViewBag.lita)
                    {
                        <tr>
                            <td>@item.idExample</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@if(ViewBag.error != null) 
{ 
    <script>
        document.addEventListener("DOMContentLoaded", function () {
           alert("@ViewBag.error");
        });
    </script>
}

<script>
    function mostrar() {
        var tipo = document.getElementById("Id").value;
        var nombre = document.getElementById("Nombre").value;
        var desc = document.getElementById("Descripcion").value;
        var selectedValue = document.querySelector("#opciones").value;
        window.location = "/Home/index?tipo=" + selectedValue +  "&nombre=" + nombre + "&desc=" + desc;
    }
    function insertar() {
        var tipo = document.getElementById("Id").value;
        var nombre = document.getElementById("Nombre").value;
        var desc = document.getElementById("Descripcion").value;
        var selectedValue = document.querySelector("#opciones").value;
        window.location = "/Home/insertar?tipo=" + selectedValue + "&id=" + tipo + "&nombre=" + nombre + "&desc=" + desc;
    }
    function update() {
        var tipo = document.getElementById("Id").value;
        var nombre = document.getElementById("Nombre").value;
        var desc = document.getElementById("Descripcion").value;
        var selectedValue = document.querySelector("#opciones").value;
        window.location = "/Home/actualizar?tipo=" + selectedValue+ "&id=" + tipo+ "&nombre=" + nombre + "&desc=" + desc;
    }
    function eliminar() {
        var tipo = document.getElementById("Id").value;
        var nombre = document.getElementById("Nombre").value;
        var desc = document.getElementById("Descripcion").value;
        var selectedValue = document.querySelector("#opciones").value;
        window.location = "/Home/eliminar?tipo=" + selectedValue + "&id=" + tipo + "&nombre=" + nombre + "&desc=" + desc;
    }
</script>